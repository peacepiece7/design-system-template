{
  "name": "turbo-design-system",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "storybook": "turbo run storybook",
    "build": "turbo build",
    "lint": "turbo lint",
    "lint:packages:list": "syncpack list",
    "lint:packages:semver": "syncpack lint-semver-ranges",
    "lint:packages:mismatches": "syncpack list-mismatches",
    "lint:format": "prettier --check \"**/*.{js,ts,tsx,md,mdx,json}\"",
    "types:check": "turbo run types:check",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:win": "turbo run clean && rmdir /s /q node_modules",
    "prepare": "husky & node ./scripts/git_commit_convention.mjs & git config commit.template ./scripts/git_commit_template.txt"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.1.4",
    "prettier": "^3.2.5",
    "syncpack": "^12.4.0",
    "turbo": "^2.0.9",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
