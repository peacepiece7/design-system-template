{
  "name": "turbo-design-system",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "storybook": "turbo run storybook",
    "build": "turbo build",
    "lint": "turbo lint",
    "types:check": "turbo run types:check",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "dependency:check": "syncpack list",
    "dependency:mismatch": "syncpack list-mismatches"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.9",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
