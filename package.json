{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:setup": "echo 'Running setup tasks...'",
    "dev:web": "turbo run dev --filter web",
    "dev:docs": "turbo run dev --filter docs",
    "lint": "turbo lint",
    "lint:packages": "turbo run lint --filter=./packages/*",
    "lint:apps": "turbo run lint --filter=./apps/*",
    "test": "turbo test",
    "test:packages": "turbo run test --filter=./packages/*",
    "test:apps": "turbo run test --filter=./apps/*",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "storybook": "turbo run storybook",
    "clean": "rm -rf .turbo && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name '.next' -type d -prune -exec rm -rf '{}' + && rm -f package-lock.json + && pnpm install"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.9",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
